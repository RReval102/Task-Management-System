<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD//EN"
        "http://hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <!--
        Hibernate configuration for an in‑memory H2 database.  The
        `hbm2ddl.auto` setting of `update` will create the schema on
        startup and update it as needed.  Because the database URL
        includes `DB_CLOSE_DELAY=-1`, the database lives for the duration
        of the JVM session so multiple tests can share the same in‑memory
        instance.
    -->
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.H2Dialect</property>
        <property name="hibernate.connection.driver_class">org.h2.Driver</property>
        <property name="hibernate.connection.url">jdbc:h2:mem:test;DB_CLOSE_DELAY=-1</property>
        <property name="hibernate.connection.username">sa</property>
        <property name="hibernate.connection.password"></property>
        <property name="hibernate.hbm2ddl.auto">update</property>
        <property name="hibernate.show_sql">true</property>
        <mapping class="com.example.taskmanagement.model.Task" />
    </session-factory>
</hibernate-configuration>